{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist/types",
        "emitDeclarationOnly": true,
        "strict": true,
        "module": "ESNext",
        "target": "ESNext",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "importHelpers": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "src/*": ["src/*"]
        }
    },
    "include": ["src"]
}
